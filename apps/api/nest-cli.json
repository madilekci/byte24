{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "pdf/utils/fonts/**/*",
        "outDir": "dist/src/",
        "watchAssets": true
      },
      {
        "include": "pdf/utils/assets/**/*",
        "outDir": "dist/src/",
        "watchAssets": true
      },
      {
        "include": "excel/assets/**/*",
        "outDir": "dist/src/",
        "watchAssets": true
      },
      {
        "include": "assets/**/*",
        "outDir": "dist/src/",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
